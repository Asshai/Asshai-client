/* detail.wxss */
@import "../common/common.wxss";

.topic-item {
  padding: 15px 18px 15px 0;
  margin-right: -18px;
  display: flex;
  border-bottom: 1px solid #f8f8f8;
}

.topic-detail {
  flex: 1;
}

.topic-cover {
  width: 100px;
  height: 70px;
  margin-left: 10px;
}

.topic-title {
  font-size: 16px;
  line-height: 24px;
}

.topic-info {
  font-size: 12px;
  color: #aaa;
  margin-top: 3px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.topic-author {
  display: flex;
  align-items: center;
}

.topic-author-avatar {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  margin-right: 6px;
}

.empty-message {
  text-align: center;
  color: #aaa;
  margin-top: 50px;
}
